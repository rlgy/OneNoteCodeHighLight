<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="HighLightForm.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
    <section name="HighLightSection" type="HighLightEngine.HighLightSection, HighLightEngine"/>
  </configSections>
  <userSettings>
    <HighLightForm.Properties.Settings>
      <setting name="default_lang" serializeAs="String">
        <value>php</value>
      </setting>
      <setting name="default_theme" serializeAs="String">
        <value>molokai</value>
      </setting>
      <setting name="default_font" serializeAs="String">
        <value>Consolas</value>
      </setting>
      <setting name="default_size" serializeAs="String">
        <value>12</value>
      </setting>
      <setting name="default_showLineNum" serializeAs="String">
        <value>True</value>
      </setting>
    </HighLightForm.Properties.Settings>
  </userSettings>

  <HighLightSection FolderName="highlight" ProcessName="highlight.exe">
    <GeneralArguments>
      <add Name="InputFile" Key="-i" Value="{inputFileName}"/>
      <add Name="Syntax" Key="-S" Value="{lang}"/>
      <add Name="OutputFile" Key="-o" Value="{outputFileName}"/>
      <add Name="InlineCss" Key="--inline-css" Value=""/>
    </GeneralArguments>
    <OutputArguments>
      <!--<add Name="Fragment" Key="-f" Value=""/>-->
      <!--<add Name="IncludeStyle" Key="-I" Value=""/>-->
      <add Name="Encoding" Key="-u" Value="utf-8"/>
      <add Name="LineNumbers" Key="-l" Value="" Option="true"/>
      <add Name="Style" Key="-s" Value="{theme}"/>
      <add Name="LineNumberLength" Key="-j" Value="2"/>
      <add Name="FontFamily" Key="-k" Value="{font}" />
      <add Name="FontSize" Key="-K" Value="{size}" />
      <add Name="Zeroes" Key="-z" Value=""/>
      <add Name="WarpSimple" Key="-W" Value="" />
    </OutputArguments>
  </HighLightSection>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>